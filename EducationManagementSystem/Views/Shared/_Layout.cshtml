<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ZzNPTzZ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ZzNPTzZ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ">

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Manage Roles", "Index", "ManageRoles", new { area = "Admin" }, null)</li>
                            <li>@Html.ActionLink("Manage Users", "Index", "ManageUsers", new { area = "Admin" }, null)</li>
                        }
                        else if (User.IsInRole("TrainingStaff"))
                        {
                            <li>@Html.ActionLink("Manage Trainees", "Index", "ManageTrainees", new { area = "TrainingStaff" }, null)</li>
                            <li>@Html.ActionLink("Manage Trainers", "Index", "ManageTrainers", new { area = "TrainingStaff" }, null)</li>
                            <li>@Html.ActionLink("Manage Category", "Index", "ManageCategories", new { area = "TrainingStaff" }, null)</li>
                            <li>@Html.ActionLink("Manage Course", "Index", "ManageCourses", new { area = "TrainingStaff" }, null)</li>
                            <li>@Html.ActionLink("Manage Classes", "Index", "ManageClasses", new { area = "TrainingStaff" }, null)</li>
                        }
                        else if (User.IsInRole("Trainee"))
                        {
                            <li>@Html.ActionLink("View Class", "Index", "ViewClasses", new { area = "Trainee" }, null)</li>
                            <li>@Html.ActionLink("View Profile", "Index", "ViewProfile", new { area = "Trainee" }, null)</li>
                        }
                        else if (User.IsInRole("Trainer"))
                        {
                            <li>@Html.ActionLink("View Class", "Index", "ViewClasses", new { area = "Trainer" }, null)</li>
                            <li>@Html.ActionLink("View Profile", "Index", "ViewProfile", new { area = "Trainer" }, null)</li>
                        }
                    }
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ZzNPTzZ</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
