@model IEnumerable<EducationManagementSystem.Models.Class>

@{
    ViewBag.Title = "Index";
}

<h2>Class List</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-hover table-responsive table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Category.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Category.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            @Html.ActionLink("Manage Topics", "Index", "ManageTopics", new { area = "TrainingStaff", classId = item.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Manage Trainees", "AssignTrainee", new { id = item.Id }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
